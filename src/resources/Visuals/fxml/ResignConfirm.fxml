        <Button fx:id="yesButton" layoutX="14.0" layoutY="100.0" mnemonicParsing="false"  onMouseEntered="#yesEntered" onMouseExited="#yesExited" prefHeight="36.0" prefWidth="70.0" style="-fx-font-weight: bold; -fx-background-color: black;" text="Yes" textFill="chartreuse" />
        <Button fx:id="noButton" layoutX="115.0" layoutY="100.0" mnemonicParsing="false"  onMouseEntered="#noEntered" onMouseExited="#noExited" prefHeight="36.0" prefWidth="70.0" style="-fx-font-weight: bold; -fx-background-color: black;" text="No" textFill="chartreuse" />
    </children>
</AnchorPane>
