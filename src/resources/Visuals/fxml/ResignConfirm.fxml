<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: dimgray;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ResignController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="3.0" layoutY="14.0" prefHeight="50.0" prefWidth="194.0" style="-fx-font-weight: bold;" text="Are you sure you want to resign the game?" textAlignment="CENTER" textFill="chartreuse" textOverrun="CLIP" wrapText="true">
